<div class="container">
  <h1>マイページ</h1>
  <%= link_to '＋追加', new_post_path, class: "btn btn-secondary" %>
  <% @posts.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>
  <div class="row">
    <!--<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">-->
    <% @user.children.each do |child| %>
      <%= link_to user_child_path(current_user,child.id) do %>
        <%= image_tag child.get_profile_image(100,100) %><br>
      <% end %>
  </div> 
      <%= link_to child.name, user_child_path(current_user,child.id) %>
    <% end %>
    <p><%#= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <h3>投稿一覧</h3>
    
        <table class="table table">
          <thead>
            <tr>
              <th scope="col">日付</th>
              <th scope="col">タイトル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |posts| %>
            <tr>
              <%= link_to show_post_path(@child,posts.id) do %>
              <% end %>
              <td><%= posts.date %></td>
              <td><%= posts.title %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
       
    
    
  
  <h3>いいね一覧</h3>
  </div>
  
</div>