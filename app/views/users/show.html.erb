<div class="container">
  <div class="row mt-5 justify-content-center">
  <h1>成長記録</h1>
  </div>    
</div>
  <div class="col-12 clearfix">
    <div class="float-right test-box">
    
    <%= form_with url: search_user_path(@user.id), method: :get, local: true do |f| %>
      <%= f.text_field :keyword %>
      <%= f.submit "キーワード検索", class: "btn btn-success" %>
    <% end %>
    <%= form_with url: search_user_path(@user.id), method: :get, local: true do |f| %>
      <%= f.text_field :tag %>
      <%= f.submit "タグ検索", class: "btn btn-success" %>
    <% end %>
    </div>
  </div>
  
  
  <div class="container px-5 px-sm-0">
    <h2>My children</h2>
    <div class="row">
    <!--<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">-->
      <% @user.children.each do |child| %>
        <div class="col-3">
        <%= link_to user_child_path(current_user,child.id) do %>
        <!--<div>-->
        <%= image_tag child.get_profile_image(100,100) %><br>
        <% end %>
        <p><%= link_to child.name, user_child_path(current_user,child.id) %></p>
        </div>
      <% end %>
      <p><%= link_to '＋追加',new_user_child_path(current_user), class: "btn btn-secondary" %></p><br>
    </div> 
  </div> 
      
      
    <p><%#= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <h3>投稿一覧</h3>
  <table class="table table">
    <thead>
      <tr>
        <th scope="col">日付</th>
        <th scope="col">タイトル</th>
        <th colspan="col">いいね</th>
        <th scope="col">タグ</th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |pst| %>
    <tr><%#= link_to show_post_path(@child,pst.id) do %>
      <td><%=link_to pst.date, post_path(pst.id) %></td>
      <td><%=link_to pst.title, post_path(pst.id) %></td>
      <td><%= render 'users/favorite', post: pst %></td>
      <td><%=link_to pst.tag_list.join(','), post_path(pst.id) %></td>
    </tr>
    <% end %>
    
            
    </tbody>
  </table>
       <%= paginate @posts %>
  <fooder>
  <%= link_to '退会',check_path, method: :delete %>  
  </fooder>
  
    </tbody>   
  </table>
</div>