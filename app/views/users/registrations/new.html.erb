<h2>新規会員登録</h2>
<%# byebug %>
<%= form_with(model: @user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :name, "(姓)" "(名)"%><br>
  <%= f.text_field :last_name,autoforcus: true %>  <%= f.text_field :first_name,autoforcus: true %>
  </div>
  
  <div class="custom-control custom-radio custom-control-inline">
  <%#= f.label :gender, '性別' %><br>
  <%#= f.text_field :gender%>
    <input type="radio" class="custom-control-input" name="inlineRadioOptions" id="inlineRadio1" value="option1">
    <label for="inlineRadio1" class="custom-control-label">女性</label>
  </div>
  <div class="custom-control custom-radio custom-control-inline">
    <input type="radio" class="custom-control-input" name="inlineRadioOptions" id="inlineRadio2" value="option2">
    <label for="inlineRadio2" class="custom-control-label">男性</label>
  </div>

  <div class="field">
  <%= f.label :birthday, '生年月日' %><br>
  <%= f.text_field :birthday %>
  </div>

  <div class="field">
  <%= f.label :email, 'メールアドレス' %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field", 'パスワード確認'>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
