<div class="conteiner">
  <h4>会員詳細</h4>
  
    <div class="row">
      <div class="col-lg-9">
        <table>
          <h5>会員ID</h5>
            <p><%= @user.id %></p>
          <h5>氏名</h5>
            <p><%= @user.full_name %></p>

          <h5>メールアドレス</h5>
            <p><%= @user.email %></p>
          <h5>会員ステータス</h5>
          <td><% if @user.is_deleted == false %>
　            有効
　            <% else %> 
　            退会
　            <% end %></td>
          </table>
          <div class="container">
  <h4>コメント一覧</h4>
