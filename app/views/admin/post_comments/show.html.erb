<div class="container">
  <h4>コメント一覧</h4>
    <table class="table">
      <thead>
        <tr>
          <th>日時</th>
          <th>コメント内容</th>
        </tr>
      </thead>
          
      <tbody>
        <% @post_comments.each do |comment| %>
      　   <tr>
            <td><%= link_to comment.created_at.to_time.strftime("%Y/%m/%d %H:%M:%S"),  admin_post_comments_show_path %></td>
            <td><%= comment %></td>
            <td><%= link_to "削除する", admin_post_comments_show_path,class: "btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？"%></td>
　        </tr>
　      <% end %>
      </tbody>
    </table>
  </div>