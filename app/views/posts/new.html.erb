<div class="container">
  <h1>投稿画面</h1>
    <div class="row">
    <%= form_with model: @post, url: children_post_path(@child), method: :post do |f| %>
      <h4>日付</h4>
      <%= f.text_field :date %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    	<h4>内容</h4>
      <%= f.text_area :content %>
    	<% link_to '戻る', user_child_path(current_user), class: "btn btn-success" %>
      <%= f.submit '投稿する' %>
    <% end %>
  </div>
</div>