<h1>投稿一覧</h1>

<%= @posts.each do |post| %>

  <span><%= post.created_at %></span>

  
  <span><%= post.title %></span>
  <%= link_to post.title, post_path(@post.id) %>
  
  <p>画像</p>
  
  <%= image_tag post.image, size: "200x200" %>
  
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
<% end %>