<div class="container px-5 px-sm-0">
  <h2>投稿一覧画面</h2>
  <div class="row">
    <tbody>
      <% @posts.each do |post| %>
        <div class="col-4">
        <p><%= image_tag post.image, size: "200x200" %></p>
        <%= post.date %>
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
          <!--<p><%#= image_tag post.image, size: "200x200" %></p>-->
        <% end %>
        
        </div>
      <% end %>
    </tbody>
    </div>
  <%= paginate @posts %>
</div>      